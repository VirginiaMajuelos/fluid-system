{
  "name": "fluid-system-components",
  "private": false,
  "version": "1.0.8",
  "description": "Fluid System is an open-source React component library created to build fast and awesome websites from scratch with easy to use Components.",
  "type": "module",
  "files": [
    "dist/",
    "src/index.js",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "dev": "vite",
    "build:npm": "BUILD_TARGET=npm vite build && cp -r src/styles dist/styles",
    "build:app": "vite build --config vite.config.app.js",
    "lint": "eslint .",
    "preview": "vite preview --config vite.config.app.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "clipboard": "^2.0.11",
    "jsdom": "^25.0.0",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.26.2",
    "react-syntax-highlighter": "^15.5.0",
    "vitest": "^2.1.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@eslint/js": "^9.9.0",
    "@storybook/addon-essentials": "^8.3.0",
    "@storybook/addon-interactions": "^8.3.0",
    "@storybook/addon-links": "^8.3.0",
    "@storybook/addon-onboarding": "^8.3.0",
    "@storybook/blocks": "^8.3.0",
    "@storybook/react": "^8.3.0",
    "@storybook/react-vite": "^8.3.0",
    "@storybook/test": "^8.3.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-storybook": "^0.8.0",
    "globals": "^15.9.0",
    "prop-types": "^15.8.1",
    "storybook": "^8.3.0",
    "vite": "^5.4.1",
    "vite-plugin-copy": "^0.1.6"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
